<div class="sign-up-container">
  <h1>Login</h1>
  
  <%= form_tag sessions_path do %>
    <div class="form-field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
  
    <div class="form-field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
  
    <%= submit_tag "Submit", class: "submit-button" %>
  <% end %>
</div>